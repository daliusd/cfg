{
  "$schema": "https://opencode.ai/config.json",
  "theme": "rosepine",
  "model": "github-copilot/claude-sonnet-4.5",
  "lsp": false,
  "share": "disabled",
  "mcp": {
    "wix-design-system-mcp": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@wix/design-system-mcp"
      ],
      "environment": {
        "WORKSPACE_FOLDER_PATHS": "."
      }
    },
    "wix-figma": {
      "type": "local",
      "enabled": false,
      "command": [
        "npx",
        "mcp-remote",
        "https://mcp-s.wewix.net/mcp?toolkit=wixchat-design-promoted"
      ],
      "environment": {}
    },
    "business-schema-mcp": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@wix/business-schema-mcp"
      ]
    },
    "browsermcp": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "@browsermcp/mcp@latest"
      ]
    },
  }
}
