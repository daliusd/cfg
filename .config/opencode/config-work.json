{
  "$schema": "https://opencode.ai/config.json",
  "theme": "rosepine",
  "model": "github-copilot/claude-sonnet-4.5",
  "share": "disabled",
  "mcp": {
    "wix-design-system-mcp": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@wix/design-system-mcp"
      ],
      "environment": {
        "WORKSPACE_FOLDER_PATHS": "."
      }
    },
    "wix-figma-mcp": {
      "type": "local",
      "enabled": false,
      "command": [
        "/home/daliusd/.config/opencode/commands/figma.sh"
      ],
      "environment": {}
    },
    "wix-figma": {
      "type": "local",
      "enabled": false,
      "command": [
        "npx",
        "mcp-remote",
        "https://mcp-s.wewix.net/mcp?toolkit=wixchat-design-promoted"
      ],
      "environment": {}
    },
    "wix-dev": {
      "type": "local",
      "enabled": false,
      "command": [
        "npx",
        "mcp-remote",
        "https://mcp-s.wewix.net/mcp?toolkit=dev"
      ],
      "environment": {}
    },
    "wix-slack": {
      "type": "local",
      "enabled": false,
      "command": [
        "npx",
        "mcp-remote",
        "https://mcp-s.wewix.net/mcp?mcp=slack"
      ],
      "environment": {}
    },
    "business-schema-mcp": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@wix/business-schema-mcp"
      ]
    },
    "bi-catalog-mcp": {
      "type": "remote",
      "enabled": true,
      "url": "https://bo.wix.com/_serverless/bi-catalog-mcp/mcp/",
    },
    "octocode": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "octocode-mcp"
      ]
    },
    "tsserver-mcp": {
      "type": "local",
      "enabled": false,
      "command": [
        "npx",
        "tsserver-mcp"
      ]
    },
    "browsermcp": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "@browsermcp/mcp@latest"
      ]
    }
  }
}
