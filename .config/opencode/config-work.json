{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "model": "github-copilot/gemini-2.5-pro",
  "share": "disabled",
  "mcp": {
    "wix-design-system-mcp": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@wix/design-system-mcp"
      ],
      "environment": {
        "WORKSPACE_FOLDER_PATHS": "."
      }
    },
    "wix-figma-mcp": {
      "type": "local",
      "enabled": false,
      "command": [
        "/home/daliusd/.config/opencode/commands/figma.sh"
      ],
      "environment": {}
    },
    "wix-figma": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "mcp-remote",
        "https://mcp-s.wewix.net/mcp?toolkit=wixchat-design-promoted"
      ],
      "environment": {}
    },
    "wix-dev": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "mcp-remote",
        "https://mcp-s.wewix.net/mcp?toolkit=dev"
      ],
      "environment": {}
    },
    "wix-slack": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "mcp-remote",
        "https://mcp-s.wewix.net/mcp?mcp=slack"
      ],
      "environment": {}
    },
    "business-schema-mcp": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@wix/business-schema-mcp"
      ]
    },
    "@wix/colombus-assistant-mcp": {
      "type": "local",
      "enabled": false,
      "command": [
        "npx",
        "@wix/colombus-assistant-mcp"
      ]
    }
  }
}
