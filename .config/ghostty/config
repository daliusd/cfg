# Font
font-family                    = VictorMono Nerd Font Mono
font-style                     = SemiBold
font-style-bold                = Bold
font-style-italic              = SemiBold Italic
font-feature                   = calt=0
font-feature                   = clig=0
font-feature                   = liga=0
font-size                      = 15

# Look and Feel
link-url                       = true
mouse-hide-while-typing        = true
theme                          = Dayfox
maximize                       = true
window-decoration              = none

# Other
scrollback-limit               = 1000000
shell-integration              = fish
shell-integration-features     = cursor,sudo,title

# Key bindings
keybind                        = alt+t=new_tab
keybind                        = alt+k=previous_tab
keybind                        = alt+j=next_tab
keybind                        = alt+h=move_tab:-1
keybind                        = alt+l=move_tab:+1
keybind                        = alt+f=toggle_fullscreen
keybind                        = alt+d=toggle_window_decorations
keybind                        = alt+n=new_split:right
keybind                        = alt+left=goto_split:left
keybind                        = alt+down=goto_split:bottom
keybind                        = alt+up=goto_split:top
keybind                        = alt+right=goto_split:right
keybind                        = alt+r=reload_config
keybind                        = alt+minus=decrease_font_size:1
keybind                        = alt+equal=increase_font_size:1
