[core]
    excludesfile = ~/.gitignore_global
    pager = delta
[push]
    followTags = true
[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    lg = !git log --pretty=format:'%C(yellow)%h%Creset%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%an <%ae> %G?%Creset' --abbrev-commit --date=short --color
    root = rev-parse --show-toplevel
[commit]
    gpgsign = true
    verbose = true

[delta]
    syntax-theme = GitHub

[interactive]
    diffFilter = delta --color-only --light
